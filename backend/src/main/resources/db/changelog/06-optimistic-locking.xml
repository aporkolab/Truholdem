<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="06-001" author="truholdem">
        <comment>Add optimistic locking version column to poker_games</comment>
        <addColumn tableName="poker_games">
            <column name="version" type="BIGINT" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="06-002" author="truholdem">
        <comment>Add audit columns to poker_games</comment>
        <addColumn tableName="poker_games">
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="06-003" author="truholdem">
        <comment>Add indexes for performance optimization</comment>
        <createIndex indexName="idx_game_phase" tableName="poker_games">
            <column name="phase"/>
        </createIndex>
        <createIndex indexName="idx_game_finished" tableName="poker_games">
            <column name="is_finished"/>
        </createIndex>
        <createIndex indexName="idx_game_created_at" tableName="poker_games">
            <column name="created_at"/>
        </createIndex>
    </changeSet>

    <changeSet id="06-004" author="truholdem">
        <comment>Add optimistic locking to players table</comment>
        <addColumn tableName="players">
            <column name="version" type="BIGINT" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>
