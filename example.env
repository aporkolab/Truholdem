# =============================================================================
# TruHoldem Environment Configuration
# =============================================================================
# Copy this file to .env and customize the values for your environment.
# Do NOT commit .env to version control!
# =============================================================================

# =============================================================================
# Application Settings
# =============================================================================
SPRING_PROFILES_ACTIVE=dev
SERVER_PORT=8080
APP_BASE_URL=http://localhost:8080

# =============================================================================
# Database Configuration (PostgreSQL)
# =============================================================================
DB_USERNAME=user
DB_PASSWORD=password
# Note: Database URL is configured in application.properties
# Default: jdbc:postgresql://localhost:5432/truholdem

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379

# =============================================================================
# Security / JWT
# =============================================================================
# IMPORTANT: Change this to a secure random string in production!
JWT_SECRET=truholdemSecretKeyThatShouldBeVeryLongAndSecureAndRandomForProduction

# =============================================================================
# CORS & WebSocket Origins
# =============================================================================
CORS_ORIGINS=http://localhost:4200,https://truholdem.porkolab.hu
WEBSOCKET_ORIGINS=http://localhost:4200,https://truholdem.porkolab.hu

# =============================================================================
# Email / SMTP Configuration
# =============================================================================
# Set MAIL_ENABLED=true to enable email sending
MAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
# For Gmail, use an App Password (not your regular password)
# Generate at: https://myaccount.google.com/apppasswords
SMTP_PASSWORD=your-app-password
MAIL_FROM=noreply@truholdem.com
MAIL_FROM_NAME=TruHoldem

# =============================================================================
# OpenTelemetry / Observability
# =============================================================================
OTEL_ENABLED=true
OTEL_SERVICE_NAME=truholdem-backend
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_METRICS_EXPORT_INTERVAL=60000

# =============================================================================
# WebSocket Clustering (for horizontal scaling)
# =============================================================================
WEBSOCKET_CLUSTER_ENABLED=false
# HOSTNAME is typically set by the OS or container orchestrator

# =============================================================================
# OAuth2 Configuration (Google & GitHub) - OPTIONAL
# =============================================================================
# OAuth2 login is OPTIONAL. If you don't set these, the app will work without social login.
# To enable OAuth2, uncomment and fill in the values below.

# Google OAuth2
# 1. Go to: https://console.cloud.google.com/apis/credentials
# 2. Create OAuth 2.0 Client ID (Web application)
# 3. Add authorized redirect URI: http://localhost:8080/api/auth/oauth2/callback/google
# 4. Uncomment and fill in below:
#SPRING_SECURITY_OAUTH2_CLIENT_REGISTRATION_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
#SPRING_SECURITY_OAUTH2_CLIENT_REGISTRATION_GOOGLE_CLIENT_SECRET=your-google-client-secret
#SPRING_SECURITY_OAUTH2_CLIENT_REGISTRATION_GOOGLE_SCOPE=email,profile
#SPRING_SECURITY_OAUTH2_CLIENT_REGISTRATION_GOOGLE_REDIRECT_URI={baseUrl}/api/auth/oauth2/callback/google

# GitHub OAuth2
# 1. Go to: https://github.com/settings/developers
# 2. Create new OAuth App
# 3. Set authorization callback URL: http://localhost:8080/api/auth/oauth2/callback/github
# 4. Uncomment and fill in below:
#SPRING_SECURITY_OAUTH2_CLIENT_REGISTRATION_GITHUB_CLIENT_ID=your-github-client-id
#SPRING_SECURITY_OAUTH2_CLIENT_REGISTRATION_GITHUB_CLIENT_SECRET=your-github-client-secret
#SPRING_SECURITY_OAUTH2_CLIENT_REGISTRATION_GITHUB_SCOPE=user:email,read:user
#SPRING_SECURITY_OAUTH2_CLIENT_REGISTRATION_GITHUB_REDIRECT_URI={baseUrl}/api/auth/oauth2/callback/github

# Frontend OAuth callback URL
OAUTH2_REDIRECT_URI=http://localhost:4200/auth/oauth-callback
