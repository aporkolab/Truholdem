{
  "name": "texas-holdem-frontend",
  "version": "2.0.0",
  "scripts": {
    "ng": "ng",
    "start": "npx serve -s dist/texas-holdem-frontend",
    "dev": "ng serve --proxy-config proxy.conf.js",
    "build": "ng build --configuration=production",
    "build:prod": "ng build --configuration=production",
    "watch": "ng build --watch --configuration=development",
    "test": "jest",
    "test:ci": "jest --ci --coverage",
    "test:coverage": "jest --coverage",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "e2e": "cypress open",
    "e2e:headless": "cypress run",
    "e2e:ci": "cypress run --browser chrome --headless",
    "start:e2e": "node scripts/start-e2e-server.js",
    "test:all": "npm run test:ci && npm run e2e:ci"
  },
  "private": true,
  "homepage": "https://www.truholdem.aporkolab.com",
  "dependencies": {
    "@angular/animations": "^20.2.1",
    "@angular/cli": "^20.1.5",
    "@angular/common": "^20.2.1",
    "@angular/compiler": "^20.2.1",
    "@angular/core": "^20.2.1",
    "@angular/forms": "^20.2.1",
    "@angular/platform-browser": "^20.2.1",
    "@angular/platform-browser-dynamic": "^20.2.1",
    "@angular/router": "^20.2.1",
    "@ngrx/component-store": "^20.1.0",
    "@ngrx/operators": "^20.1.0",
    "bootstrap": "^5.3.3",
    "rxjs": "~7.8.1",
    "tslib": "^2.7.0",
    "zone.js": "^0.15.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.1.5",
    "@angular/cli": "^20.1.5",
    "@angular/compiler-cli": "^20.2.1",
    "@types/bootstrap": "^5.2.10",
    "@types/jasmine": "~5.1.4",
    "@types/jest": "^30.0.0",
    "angular-eslint": "20.2.0",
    "axe-core": "^4.11.0",
    "cypress": "^13.15.0",
    "cypress-axe": "^1.7.0",
    "cypress-real-events": "^1.15.0",
    "eslint": "^9.33.0",
    "jasmine-core": "~5.2.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-jasmine2": "^30.2.0",
    "jest-preset-angular": "^16.0.0",
    "puppeteer": "^24.34.0",
    "rollup": "^4.46.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.2",
    "typescript-eslint": "8.40.0"
  }
}
