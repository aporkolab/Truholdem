{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "../out-tsc/cypress",
    "types": ["cypress", "node"],
    "lib": ["ES2022", "dom"],
    "isolatedModules": false,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "e2e/**/*.ts",
    "support/**/*.ts"
  ],
  "exclude": [
    "../src/**/*",
    "../node_modules"
  ]
}
